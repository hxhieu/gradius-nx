{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // hide submodules
    "lib": true
  },
  "C_Cpp.clang_format_path": "/usr/local/bin/clang-format",
  "files.associations": {
    "ios": "cpp",
    "istream": "cpp",
    "locale": "cpp",
    "numeric": "cpp",
    "ostream": "cpp",
    "random": "cpp",
    "vector": "cpp",
    "iosfwd": "cpp",
    "iterator": "cpp",
    "__debug": "cpp",
    "unordered_map": "cpp"
}
}
